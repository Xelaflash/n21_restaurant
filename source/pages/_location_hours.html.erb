<section id="location-hour-section">
  <div class="container flex-section">
    <div class="location-hour-left">
      <div class="location">
        <h3 class="subsection-title"><%= t('location_hours.address-title') %></h3>
        <hr class="subsection-sep" />
        <address class="details-wrapper" id="address">
          <%= t('location_hours.address_html') %>
        </address>
      </div>
      <div class="contact-medium">
        <h3 class="subsection-title"><%= t('location_hours.contact-title') %></h3>
        <hr class="subsection-sep" />
        <div class="details-wrapper">
          <p>
            <a class="contact-link" href="mailto:booking@n21saigon.com" aria-label="Email">booking@n21saigon.com</a>
          </p>
          <p>
            <a class="contact-link" href="tel:+842839300840" aria-label="Telephone">+84 28 3930 0840</a>
          </p>
        </div>
      </div>
      <div class="hours">
        <h3 class="subsection-title"><%= t('location_hours.hours-title') %></h3>
        <hr class="subsection-sep" />
        <div class="details-wrapper">
          <p><%= t('location_hours.hours_html') %></p>
        </div>
      </div>
    </div>
    <div class="location-hour-right">
      <div id="map" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    </div>
  </div>
</section>
