            <%= image_tag "", data: { src: "https://res.cloudinary.com/dpra9vwkq/image/upload/v1580218284/Goat_Cheese.jpg" }, alt: "N21 Restaurant - High Standard Bistronomie", class: "slide-image lazy" %>
          </div>
          <div id="slide-element-3">
            <%= image_tag "", data: { src: "https://res.cloudinary.com/dpra9vwkq/image/upload/v1580218284/prawn_ceviche.jpg" }, alt: "N21 Restaurant - High Standard Bistronomie", class: "slide-image lazy" %>
          </div>
          <div id="slide-element-4">
            <%= image_tag "", data: { src: "https://res.cloudinary.com/dpra9vwkq/image/upload/v1580218284/Beef_Brisket.jpg" }, alt: "N21 Restaurant - High Standard Bistronomie", class: "slide-image lazy" %>
          </div>
        </div>






      </div>
    </div>
  </div>
  <section id="gallery-section">
    <div class="gallery">
      <% data.gallery.each do |owner, pic| %>
      <div class="brick">
        <a href="<%= pic.url %>" data-lightbox="picture-gallery" data-title="N21 Restaurant - Our Delicious Food">
          <%= image_tag "", data: { src:  pic.url }, alt: "N21 Restaurant - Our Delicious Food", class: "lazy" %>
        </a>
      </div>
      <% end %>
    </div>
  </section>
</section>
